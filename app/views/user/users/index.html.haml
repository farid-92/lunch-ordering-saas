%section.content-header
  .container-fluid
    .row.mb-2
      .col-sm-6
        %h1 Users
%section.content
  .card
    .card-header
      %h3.card-title Users
    .card-body.p-0
      %table.table.table-striped.projects
        %thead
          %tr
            %th{:style => "width: 1%"}
              \#
            %th{:style => "width: 20%"}
              Name
            %th{:style => "width: 20%"}
              Email
            %th{:style => "width: 20%"}
              Organization
            %th{:style => "width: 20%"}
              Role

        %tbody
          = render 'user', users: @users