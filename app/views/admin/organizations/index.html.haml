%section.content-header
  .container-fluid
    .row.mb-2
      .col-sm-6
        %h1 Organizations
  / /.container-fluid


%section.content
  = link_to 'Add', new_admin_organization_path, :class => 'btn btn-outline-primary mb-2'
  .card
    .card-header
      %h3.card-title Organizations
    .card-body.p-0
      %table.table.table-striped.projects
        %thead
          %tr
            %th{:style => "width: 1%"}
              \#
            %th{:style => "width: 20%"}
              Organization Name
            %th{:style => "width: 20%"}
        %tbody
          - @organizations.each_with_index do | organization, index|
            %tr
              %td
                = index + 1
              %td
                = organization.name
              %td.project-actions.text-right
                = link_to edit_admin_organization_path(organization), class: 'btn btn-info btn-sm mr-1' do
                  %i.fas.fa-pencil-alt
                    Edit
                = link_to admin_organization_path(organization), :method => 'delete', data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger' do
                  %i.fas.fa-trash
                    Delete